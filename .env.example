# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application Settings
VITE_APP_NAME=Packsi Mini App
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Telegram Bot Configuration
VITE_TELEGRAM_BOT_TOKEN=your_bot_token_here
VITE_TELEGRAM_BOT_USERNAME=your_bot_username

# API Configuration
VITE_API_BASE_URL=https://api.example.com
VITE_API_TIMEOUT=10000

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_THEME_SWITCHING=true

# Internationalization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,fa

# Development Settings (only for development)
VITE_DEV_TOOLS=true
VITE_HOT_RELOAD=true

# Production Settings
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true

# Security
VITE_ENABLE_CSP=true
VITE_ALLOWED_ORIGINS=https://web.telegram.org,https://t.me

# Analytics (if enabled)
VITE_GOOGLE_ANALYTICS_ID=
VITE_TELEGRAM_ANALYTICS_ID=

# Error Reporting
VITE_SENTRY_DSN=
VITE_ERROR_REPORTING_ENABLED=false

# Performance
VITE_ENABLE_COMPRESSION=true
VITE_BUNDLE_ANALYZER=false